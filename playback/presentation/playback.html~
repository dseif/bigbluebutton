	jQuery(function() {
	  var remix = document.getElementById( "remixPopcorn" );
    remix.addEventListener( "click", function( e ) {
      window.location = window.location.href.replace( "playback.html", "remix.html" );
    }, false);
		jQuery('video').acornMediaPlayer();
		$('.acorn-controls').width('500');
		$('.acorn-controls').position({
			"my": "center top",
			"at": "center bottom",
			"of": $('#playbackArea'),
			"offset": "0 -90"
		});
	});
  </script>

